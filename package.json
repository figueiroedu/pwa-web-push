{
  "name": "pwa-web-push",
  "version": "1.0.0",
  "description": "Backend server for managing Web Push subscriptions and dispatching push notifications using VAPID protocol",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "npm run docker:up && tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "docker:up": "docker start mongodb 2>/dev/null || docker run -d -p 27017:27017 --name mongodb -v mongodb_data:/data/db mongo:latest",
    "docker:down": "docker stop mongodb",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=22 <23"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@types/node-cron": "^3.0.11",
    "@types/web-push": "^3.6.4",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "mongodb-memory-server": "^11.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.6.0",
    "mongodb": "^7.0.0",
    "node-cron": "^4.2.1",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "web-push": "^3.6.7"
  }
}
